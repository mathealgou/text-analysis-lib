package textAnalysisLib

import (
	"strings"
)

var PUCTUATION = []string {
	".",
	",",
	";",
	":",
	"(",
	")",
	"[",
	"]",
	"<",
	">",
	"'",
	"\"",
	"-",
	"!",
	"?",
	"/",
	"{",
	"}",

}

func RemovePunctuation(text string) string{
	result := text
	for _, p := range PUCTUATION {
		result = strings.ReplaceAll(result, p, "")
	}
	return result
}


